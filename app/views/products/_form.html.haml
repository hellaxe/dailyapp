= form_for @product, html: {class: 'span4'} do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg
  = f.fields_for :food do |c|
    .input-control.text
      =c.text_field :name, autofocus: true, placeholder: 'Name'
    .input-control.text
      =f.text_field :manufacturer, placeholder: 'Manufacturer'
    .input-control.text
      =c.text_field :protein, placeholder: 'Protein'
    .input-control.text
      =c.text_field :carbohydrate, placeholder: 'Carbohydrate'
    .input-control.text
      =c.text_field :fat, placeholder: 'Fat'
    .input-control.text
      =c.text_field :energy, placeholder: 'Calories'

  .actions
    = f.submit 'Save'
