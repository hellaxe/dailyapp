!!!
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', content: 'IE=Edge,chrome=1"'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title
      =yield_or_default(:title)
    =csrf_meta_tags
    =stylesheet_link_tag 'application', :media => 'all'

  %body.modern-ui
    .page
      .nav-bar
        .nav-bar-inner.padding10
          %span.pull-menu
          %a{href: root_path}
            %span.element.brand
              %span.metro-ui-logo.place-left
              %span.name Daily App
          %ul.menu
            %li
              =link_to 'Home', root_path
            %li
              =link_to 'Products', products_path
            %li
              =link_to 'Recipes', recipes_path
      .page-region
        .page-region-content
          .grid
            .row
              #main-placeholder
                =render 'layouts/notices'
                =yield
      .nav-bar
        .nav-bar-inner{style:'padding: 10px 10px 5px;'}
          %span.element
            &copy; Company 2013
    =javascript_include_tag 'application'