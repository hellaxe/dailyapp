= form_for @food do |f|
  - if @food.errors.any?
    #error_explanation
      %h2= "#{pluralize(@food.errors.count, "error")} prohibited this food from being saved:"
      %ul
        - @food.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :protein
    = f.text_field :protein
  .field
    = f.label :carbohydrate
    = f.text_field :carbohydrate
  .field
    = f.label :fat
    = f.text_field :fat
  .field
    = f.label :energy
    = f.text_field :energy
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :consumable_id
    = f.number_field :consumable_id
  .field
    = f.label :consumable_type
    = f.text_field :consumable_type
  .actions
    = f.submit 'Save'
